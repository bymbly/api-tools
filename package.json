{
  "name": "@bymbly/openapi-tools",
  "version": "1.0.0",
  "description": "Shared Tooling for OpenAPI Specs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bymbly/openapi-tools.git"
  },
  "publishConfig": {
    "@bymbly:registry": "https://npm.pkg.github.com"
  },
  "bin": {
    "redocly-bundle": "./dist/bin/redocly/bundle.js",
    "redocly-lint": "./dist/bin/redocly/lint.js",
    "redocly-build-docs": "./dist/bin/redocly/build-docs.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:update": "vitest --update"
  },
  "dependencies": {
    "@redocly/cli": "^2.12.3",
    "@stoplight/spectral-cli": "^6.15.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@vitest/ui": "^4.0.15",
    "markdownlint-cli2": "0.19.0",
    "prettier": "3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
